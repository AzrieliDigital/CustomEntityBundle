{% extends baseTemplate %}
{% import 'PimDataGridBundle::macros.html.twig' as dataGrid %}

{% block content %}

    {% set title = (customEntityName ~ ".overview")|trans %}
    {% oro_title_set({params:{'%title%': title}}) %}

    {% set buttons %}
        {% if createUrl|default(false) %}
            {{ elements.createBtn(
                customEntityName,
                createUrl,
                quickCreate ? 'dialog' : '',
                'pim_enrich_family_create',
                'plus'
            ) }}
        {% endif %}
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    {{ dataGrid.renderGrid(customEntityName, { localeCode: locale_code() }) }}

{% endblock %}
